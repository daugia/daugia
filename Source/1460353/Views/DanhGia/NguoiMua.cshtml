@using _1460353.Models
@using _1460353.Helpers
@model  List<sanpham>
@{
    ViewBag.Title = "NguoiMua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css
{
    <link href="~/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
}
@section js
{
    <script src="~/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
}
 <div class="well">
        <table id="table" class="table table-striped">
            <tr>
                <td>Hình</td>
                <td>Tên sản phẩm</td>
                <td>Giá hiện tại</td>
                <td>Tên Người Bán</td>
                <td>Đánh Giá</td>
            </tr>
            @foreach (var sp in Model)
            {
                <tr class="tr">
                    <td><img style="width:60px;height:60px" src="@sp.hinh1" /></td>
                    <td>@sp.ten</td>
                    <td>@sp.giahientai</td>
                    <td>@sp.id_nguoidung</td>
                    <td>
                        <form class="navbar-form navbar-left" method="post" action=@Url.Action("NguoiMua", "DanhGia")>
                            <input type="text" class="form-control" placeholder="Xin Nhap Noi Dung Danh Gia" name="NoiDung">
                            <input type="hidden" class="form-control" name="idnd" value="@sp.id_nguoidung">
                            <input type="hidden" class="form-control" name="idndg" value="@sp.id_nguoidunghientai">
                            <input type="hidden" class="form-control" name="idsp" value="@sp.id">
                            <select class="form-group selectpicker" name="chon">
                                <option value="1">Tốt</option>
                                <option value="2">Xấu</option>
                            </select>
                            <button type="submit" class="btn btn-default">
                                <i class="glyphicon glyphicon-send"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>