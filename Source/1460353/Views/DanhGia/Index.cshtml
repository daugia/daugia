@using _1460353.Models
@using _1460353.Helpers
@model  List<danhgia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count == 0)
{
    <text>Chưa Có Lượt Đánh Giá Nào</text>
}
else
{
<div class="well">
    <div class="row">
        <h4>Tốt : @ViewBag.Tot</h4>
        <h4>Xấu : @ViewBag.Xau</h4>
        <h4>Tổng :  @ViewBag.Tong</h4>
    </div>
    <table id="table" class="table table-striped">
        <tr>
            <td>Tên</td>
            <td>Tên Người Đã Đánh Giá</td>
            <td>Nội Dụng</td>
            <td>Tốt</td>
            <td>Xấu</td>
        </tr>
        @foreach (var dg in Model)
        {
            <tr class="tr">
                <td>@dg.id_nguoidung</td>
                <td>@dg.id_nguoidanhgia</td>
                <td>@dg.noidung</td>
                <td>@dg.tot</td>
                <td>@dg.xau</td>
            </tr>
        }
    </table>
</div>
}
