@using _1460353.Models
@using _1460353.Helpers
@model  List<sanpham>
@{
    ViewBag.Title = "NguoiBan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css
{
    <link href="~/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
}
@section js
{
    <script src="~/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
}
@if (Model.Count == 0)
{
    <text>Chưa có sản phẩm nào để đánh giá !</text>
}
else
{
<div class="well">
    <table id="table" class="table table-striped">
        <tr>
            <td>Hình ảnh</td>
            <td>Tên sản phẩm</td>
            <td>Giá hiện tại</td>
            <td>Tên người mua</td>
            <td>Đánh giá của người mua</td>
        </tr>

        @foreach (var sp in Model)
        {
            <tr class="tr">
                <td><img style="width:60px;height:60px" src="@sp.hinh1" /></td>
                <td>@sp.ten</td>
                <td>@sp.giahientai</td>
                <td>@_1460353.Helpers.nguoidung.find((int)sp.id_nguoidunghientai).ten</td>
                <td>
                    <form class="navbar-form navbar-left" method="post" action=@Url.Action("NguoiBan", "DanhGia")>
                        <input type="text" class="form-control" placeholder="Xin Nhap Noi Dung Danh Gia" name="noidung">
                        <input type="hidden" class="form-control" name="idnd" value="@sp.id_nguoidunghientai">
                        <input type="hidden" class="form-control" name="idndg" value="@sp.id_nguoidung">
                        <input type="hidden" class="form-control" name="idsp" value="@sp.id">
                        <select class="form-group selectpicker" name="chon">
                            <option value="1">Chất lượng</option>
                            <option value="0">Kém chất lượng</option>
                        </select>
                        <button type="submit" class="btn btn-default">
                            <i class="glyphicon glyphicon-send"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }

    </table>
</div>
}