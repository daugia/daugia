@model  sanpham
@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model == null)
{
    <text> Sản Phẩm Không Tồn Tại</text>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <img src="~/Imgs/sp/@Model.id/main_thumbs.jpg" alt="@Model.ten">
        </div>
