@using _1460353.Models
@using _1460353.Helpers
@model  List<sanpham>
@{
    ViewBag.Title = "Danh Muc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count == 0)
{
    <text>Không Có Sản Phẩm</text>
}
else
{

    <div class="container-fluid">
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-md-6">
                    <div class="thumbnail ">
                        <img src="~/Imgs/sp/@p.id/main_thumbs.jpg" alt="@p.ten">
                        <div class="caption">
                            <h3>@p.ten</h3>
                            <h3>Giá Khởi Điểm : @string.Format("{0:N0}", p.giakhoidiem)</h3>
                            <h3>Giá Hiện Tại : @string.Format("{0:N0}", p.giahientai)</h3>
                            <h3>Giá Mua Ngay : @string.Format("{0:N0}", p.giamuangay)</h3>
                            <h3>Miêu Tả Ngắn Sản Phẩm  @p.mieutangan</h3>
                            <p>
                                <a href=@Url.Action("ChiTiet","Product",new {id=p.id }) class="btn btn-default" role="button">Chi Tiết</a>
                                @*@if (Login.IsLogged() == true)
                                {
                                    <a href="javascript:;" class="btn btn-success addItem" role="button" data-id="@p.ProID">
                                        <i class="fa fa-cart-plus"></i>
                                        Đặt Mua
                                    </a>
                                }*@
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    <a href="?page=@((ViewBag.CurPage>1)?ViewBag.CurPage-1 : 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.Pages; i++)
                {
                    if (ViewBag.CurPage == i)
                    {
                        <li class="active"><a href="?page=@i">@i</a></li>
                    }
                    else
                    {
                    <li><a href="?page=@i">@i</a></li>
                     }
                    }
                <li>

                    <a href="?page=@((ViewBag.CurPage<ViewBag.Pages)?ViewBag.CurPage+1 : ViewBag.Pages)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
    </ul>
        </nav>
}


