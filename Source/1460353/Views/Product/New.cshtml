@using _1460353.Models
@using _1460353.Helpers
@model  sanpham
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@section css{
    <link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
    <style type="text/css">
        label{
            font-weight: normal!important;
        }
    </style>
}

<div class="text-success">
    <h2>Đăng sản phẩm đấu giá</h2>
    <form class="form-horizontal" method="post" id="addProductForm">
        <div class="form-group">
            <label for="txtProName" class="col-sm-2 control-label">Tên sản phẩm :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtProName" name="ten"/>
            </div>
            <label for="CatID" class="col-sm-2 control-label">Danh mục :</label>
            <div class="col-sm-4">
                <select class="form-control selectpicker" name="id_danhmuc">
                    @*@foreach(var c in ViewBag.Danhmuc)
                    {
                        <option value="@c.id">@c.ten</option>
                    }*@
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="txtsoluong" class="col-sm-2 control-label">Số lượng :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtQuantity" name="soluong" />
            </div>
            <label for="txtgia" class="col-sm-2 control-label">Giá :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtPrice" name="giakhoidiem"/>
            </div>
        </div>
        <div class="form-group">
            <label for="txtNgayBD" class="col-sm-2 control-label">Ngày bắt đầu :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control datepicker" id="txtDateBD" name="ngaybatdau" />
            </div>
            <label for="txtNgayKT" class="col-sm-2 control-label">Ngày kết thúc :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control datepicker" id="txtDateKT" name="ngayketthuc" />
            </div>
        </div>
        <div class="form-group">
            <label for="txtdiemtang" class="col-sm-2 control-label">Điểm được đấu :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtdiemdau" name="diemduocdau" />
            </div>
            <label for="txtgiamuangay" class="col-sm-2 control-label">Giá mua ngay :</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtPriceMua" name="giamuangay" />
            </div>
        </div>
        <div class="form-group">
            <label for="txtmota" class="col-sm-2 control-label"> Mô tả :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTinyDes" name="mieutangan" /> 
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <textarea class="form-control" id="txtfullcontext" name="chitiet"></textarea>
            </div>
        </div>
        <div class="form-group" >
            <label class="col-sm-2 control-label"></label>
            <input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty col-sm-4"/>
        </div> 
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-check"></i>&nbsp;Lưu
                </button>
                <a href="@Url.Action("LoadSPTheoDanhMuc","Product")" class="btn btn-success">
                    <i class="fa fa-reply"></i>&nbsp;Danh sách sản phẩm
                </a>
            </div>
            <div style="color: Red">@ViewBag.Message</div>
        </div>
    </form>
    @section js{
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script>
        $('.selectpicker').selectpicker();
        tinymce.init({
            selector: 'textarea',
            height: 150,
            theme: 'modern',
            plugins: [
                'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                'searchreplace wordcount visualblocks visualchars code fullscreen',
                'insertdatetime media nonbreaking save table contextmenu directionality',
                'emoticons template paste textcolor colorpicker textpattern imagetools codesample toc help'
            ],
            toolbar1: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
            toolbar2: 'print preview media | forecolor backcolor emoticons | codesample help',
            image_advtab: true,
        });
    </script>
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'd/m/yyyy',
        });
    </script>
    <script>
        $('#txtUploadFile').on('change', function (e) {
            var files = e.target.files;
            //var myID = 3; //uncomment this to make sure the ajax URL works
            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();
                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }

                    $.ajax({
                        type: "POST",
                        url: '/MyController/UploadFile?id=' + myID,
                        contentType: false,
                        processData: false,
                        data: data,
                        success: function (result) {
                            console.log(result);
                        },
                        error: function (xhr, status, p3, p4) {
                            var err = "Error " + " " + status + " " + p3 + " " + p4;
                            if (xhr.responseText && xhr.responseText[0] == "{")
                                err = JSON.parse(xhr.responseText).Message;
                            console.log(err);
                        }
                    });
                } else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
        }
        });
        </script>    
    }
</div>



