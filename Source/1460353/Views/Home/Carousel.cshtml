@model List<_1460353.Models.sanpham>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @for (var i = 1; i < Model.Count; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i"></li>
        }

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="col-md-4 col-md-offset-2">
                <img src="@Model[0].hinh1" height="200" width="200" />
            </div>
            <div class="col-md-4 ">
                <h3>@Model[0].ten</h3>
                <h5><label>Giá hiện tại :</label> @string.Format("{0:0,0}", Model[0].giahientai) </h5>
                <h5><label>Miêu tả ngăn :</label> @Model[0].mieutangan</h5>
                <h5><label>Ngày kết thúc :</label> @Model[0].ngayketthuc</h5>
                <h5></h5>
            </div>
        </div>

        @for (var i = 1; i < Model.Count; i++)
        {
            <div class="item ">
                <div class="col-md-4 col-md-offset-2">
                    <img src="@Model[i].hinh1" height="200" width="200" />
                </div>
                <div class="col-md-4 ">
                    <h3>@Model[i].ten</h3>
                    <h5><label>Giá hiện tại :</label> @string.Format("{0:0,0}", Model[i].giahientai) </h5>
                    <h5><label>Miêu tả ngăn :</label> @Model[i].mieutangan</h5>
                    <h5><label>Ngày kết thúc :</label> @Model[i].ngayketthuc</h5>
                    <h5></h5>
                </div>
            </div>
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
