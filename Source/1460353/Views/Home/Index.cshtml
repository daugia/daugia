@using _1460353.Models
@model List<List<sanpham>>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="margin-top pager">
    <h3>Top 5 sản phẩm có giá cao nhất</h3>
</div>
@Html.Action("Carousel", "Home")
<div class="margin-top pager">
    <h3 >Top 5 sản phẩm có lượt ra giá nhiều nhất</h3>
</div>
<div class="row">
    <div class="col-md-1">
    </div>
    @foreach (var sp in Model[0])
    {
        <div class="col-sm-6 col-md-2">
            <div class="thumbnail">
                <a href="@Url.Action("Chitiet","Product",new {id=sp.id })"><img class="img" style="height:150px;" src="@sp.hinh1"></a>
                
                <div class="caption">
                    <h3 class="txtover-sm">@sp.ten</h3>
                    <p class="txtover-sm" >@sp.mieutangan</p>
                    <p>Giá:@String.Format("{0:0,0}", sp.giahientai)</p>
                    <p>Lượt ra giá:@sp.luotragia</p>
                    <p>@sp.ngayketthuc</p>
                </div>
            </div>
        </div>
    }
</div>
<h3 class="pager">Top 5 sản phẩm gần hết hạn</h3>
<div class="row">
    <div class="col-md-1">
    </div>
    @foreach (var sp in Model[1])
    {
        <div class="col-sm-6 col-md-2">
            <div class="thumbnail">
                <a href="@Url.Action("Chitiet","Product",new {id=sp.id })"><img class="img" style="height:150px;" src="@sp.hinh1"></a>

                <div class="caption">
                    <h3 class="txtover-sm">@sp.ten</h3>
                    <p class="txtover-sm">@sp.mieutangan</p>
                    <p>Giá:@String.Format("{0:0,0}", sp.giahientai)</p>
                    <p>Lượt ra giá:@sp.luotragia</p>
                    <p>@sp.ngayketthuc</p>
                </div>
            </div>
        </div>
    }
</div>

